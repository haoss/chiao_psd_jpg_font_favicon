doctype

html(lang="ru")
  
  -var active = 'Контакты' //активный пункт меню, список в header.jade
  -var pageTitle = 'Контакты' + ' - медицинский центр Chiao' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    +breadcrumbs
    
    .content
      .container
        
        .content__head
          h1 контакты
        
        .row
          .col-sm-8
            
            h2 Консультативный центр CHIAO, г.Гуанчжоу, КНР
            h3 Innovation building, Panyu Avenue North 555, Panyu Energy-saving and Technology Park, Guangzhou, China
            
            p ПН-ПТ с 8:00 — 19:00 по Гуанчжоу
            p
              small Ответят на русском языке:
              br
              | (+86) 136 2288 6224  (г. Гуанчжоу)
              br
              | +7 977 495 95 99 (г. Москва)
            p
              small For english speaking countries:
              br
              | +86 136 2288 6224 (what's app)
            p Email: 
              a(href="#!") info@kamneynet.com
            
          .col-sm-4
            .visible-xs
              .clear35
                
            .content__form
              .content__form-title остались вопросы?
                strong спросите нас!
              form(action="#")
                .form__group.has-feedback
                  label.hidden Ваше имя
                  input(type="text" placeholder="Ваше имя").form__control
                  i.ion-alert-circled
                .form__group.has-feedback
                  label.hidden Телефон
                  input(type="text" placeholder="Телефон").form__control
                  i.ion-alert-circled
                .form__group
                  button(type="button").btn.btn--block перезвоните мне
        
        .clear30
        
        .content__map
          #map_canvas
          
          // Google Map
          script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
          script.
            function initialize() {
            var myLatlng = new google.maps.LatLng(55.6914793,37.332178);
            var map_options = {
              zoom: 13,
              mapTypeId: google.maps.MapTypeId.ROADMAP,
              center: myLatlng,
              scrollwheel: false,
              disableDefaultUI: true
            }
            var map = new google.maps.Map(document.getElementById('map_canvas'), map_options)
            var marker = new google.maps.Marker({
              position: myLatlng,
              map: map
            });
            /* Remove if you dont want B/W Google Map */
            /*
            var styles = [
            {
            featureType: "all",
            stylers: [
            { saturation: -100 }
            ]
            }
            ];
            map.setOptions({styles: styles});
            */
            }
            google.maps.event.addDomListener(window, 'load', initialize);
          // Google Map Ends!
    
